<% content_for :title do %>My super sweet dashboard<% end %>
<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="welcome" data-view="Text" data-title="Git Environment" data-text="" data-moreinfo="Protip: You can drag the widgets around!" style="background-color:#000000;" onclick="location.href='http://localhost:8080';">></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="3" data-sizey="1">
      <div data-id="latest_builds" data-view="List" data-unordered="true" data-title="Latest builds" data-moreinfo="" style="background-color:#96bf48;" onclick="location.href='http://localhost:8080';"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="common_fault_causes" data-view="List" data-unordered="true" data-title="Common fault causes" data-moreinfo="" onclick="location.href='http://localhost:8080';"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="top_failed_jobs" data-view="List" data-unordered="true" data-title="Top failed jobs" data-moreinfo="" style="background-color:#ec663c;" onclick="location.href='http://localhost:8080';"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="latest_failed_builds" data-view="List" data-unordered="true" data-title="Latest failed builds" data-moreinfo="" style="background-color:#ec663c;" onclick="location.href='http://localhost:8080';"></div>
    </li>
  </ul>
  <center><div style="font-size: 12px">Try this: curl -d '{ "auth_token": "YOUR_AUTH_TOKEN", "text": "Hey, Look what I can do!" }' \http://<%=request.host%>:<%=request.port%>/widgets/welcome</div></center>
</div>


<script type='text/javascript'>
$(function() {
Dashing.gridsterLayout('[{"col":1,"row":1,"size_x":1,"size_y":1},{"col":1,"row":2,"size_x":3,"size_y":1},{"col":2,"row":1,"size_x":2,"size_y":1},{"col":4,"row":2,"size_x":1,"size_y":1},{"col":4,"row":1,"size_x":1,"size_y":1}]')
});
</script>
